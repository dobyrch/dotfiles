#
# wm independent hotkeys
#

alt + Return
	urxvtc

alt + BackSpace
	firefox

alt + backslash
	watchclip

alt + space
	dmenu_run -nf \#839496 -nb \#002b36 -sf \#eee8d5 -sb \#073642


#
# bspwm hotkeys
#

# quit bspwm normally
alt + Escape
	bspc quit

# close and kill

alt + q
	bspc node -c

# alternate between the tiled and monocle layout
alt + m
	bspc desktop -l next


#
# state/flags
#

# set the window state
alt + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

# toggle fullscreen
alt + f
	toggle_fullscreen

# set the node flags
alt + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}


#
# focus/swap
#

alt + v
	bspc node -f @parent && bspc node -F horizontal && bspc node -f last

# focus the node in the given direction
alt + {ctrl,_} + {h,j,k,l}
	bspc node -{s,f} {west,south,north,east}

# focus the next/previous node
alt + Tab
	bspc node -f next

# focus the next/previous desktop
alt + {_,ctrl + }bracket{left,right}
	bspc {desktop -f,node -d} {prev,next}

# focus or send to the given desktop
alt + {_,ctrl + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}' 

#
# preselect
#

# preselect the direction
alt + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
alt + shift + space
	bspc node -p cancel


#
# pointer focus/move/resize
#

# focus
~button1
	bspc pointer -g focus

# start move/resize
alt + button{1,3}
	; bspc pointer -g {resize_corner,move}

# end move/resize
super + @button{1,3}
	bspc pointer -u

alt + {minus,equal}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

alt + 0
	bspc config -d focused window_gap 20


#
# function keys
#

XF86AudioRaiseVolume
	volume up

XF86AudioLowerVolume
	volume down

XF86ScreenSaver
	lock_pixelate

XF86Sleep
	systemctl suspend

XF86Suspend
	systemctl hibernate

F2
	battery_notify

F5
	date_notify

F6
	brightness down

F7
	brightness up

Print
	screenshot

Pause
	pause
