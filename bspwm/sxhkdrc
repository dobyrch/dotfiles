#
# wm independent hotkeys
#

super + Return
	urxvtc

super + BackSpace
	firefox

super + w
	watchclip

super + d
	dmenu_run -b -fn Gohu\ GohuFont -nf \#9a99a3 -nb \#061229 -sf \#b8bbc2 -sb \#1a2948


#
# bspwm hotkeys
#

# quit bspwm normally
super + Escape
	bspc quit

# close and kill

super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next


#
# state/flags
#

# set the window state
super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

# toggle fullscreen
super + f
	toggle_fullscreen

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}


#
# focus/swap
#

super + p
	bspc node -f @parent

super + v
	bspc node -f @parent && bspc node -F horizontal && bspc node -f last

super + r
	bspc node -f @parent && bspc node -R 270 && bspc node -f last

# focus the node in the given direction
super + {ctrl,_} + {h,j,k,l}
	bspc node -{s,f} {west,south,north,east}

# focus the next node
super + n
	bspc node -f next.local

# focus the next/previous desktop
super + {_,ctrl + }bracket{left,right}
	bspc {desktop -f,node -d} {prev,next}

# focus or send to the given desktop
super + {_,ctrl + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}' 

#
# preselect
#

# preselect the direction
super + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + shift + space
	bspc node -p cancel


#
# resize gaps
#

super + {minus,equal}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

super + 0
	bspc config -d focused window_gap 16


#
# function keys
#

XF86AudioRaiseVolume
	volume up

XF86AudioLowerVolume
	volume down

XF86AudioMute
	volume mute

XF86ScreenSaver
	lock_pixelate

XF86Battery
	battery_notify

XF86Sleep
	systemctl suspend

XF86Suspend
	systemctl hibernate

XF86Display
	dock

XF86MonBrightnessDown
	brightness down

XF86MonBrightnessUp
	brightness up

F11
	mpvc prev

F12
	mpvc next

Print
	screenshot

Pause
	mpvc pause-toggle
