[user]
	email = DouglasChristman@gmail.com
	name = Douglas Christman

[push]
	default = simple

[rebase]
	autoSquash = true

[merge]
	tool = vimdiff

[diff]
	tool = vimdiff
	colorMoved = plain
	colorMovedWS = allow-indentation-change

[difftool]
	prompt = false

[interactive]
	diffFilter = /usr/share/git/diff-highlight/diff-highlight

[pager]
	diff = /usr/share/git/diff-highlight/diff-highlight | less -i
	log = /usr/share/git/diff-highlight/diff-highlight | less -i
	show = /usr/share/git/diff-highlight/diff-highlight | less -i

[color "diff-highlight"]
	oldNormal = white
	newNormal = white
	oldHighlight = red
	newHighlight = green

[color "diff"]
	oldMoved = white
	newMoved = bold cyan
	meta = yellow
	frag = blue
